<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddTripPage">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="429dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="440dp"
                android:layout_height="290dp"
                android:contentDescription="@string/plane_img"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.555"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/plane2"
                tools:ignore="ImageContrastCheck" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="221dp"
                android:layout_height="73dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="50dp"
                android:text="@string/lets_go_plane_img_text"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#E8EAF6"
                android:textSize="48sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="TextContrastCheck" />

            <EditText
                android:id="@+id/tripStart_editTxt"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="10"
                android:autofillHints=""
                android:background="@drawable/round_edge"
                android:drawableStart="@drawable/ic_baseline_flight_takeoff_24"
                android:drawablePadding="16dp"
                android:ems="10"
                android:hint="@string/addTrip_tripStart"
                android:inputType="text"
                android:minHeight="48dp"
                android:padding="16dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView" />

            <EditText
                android:id="@+id/tripEnd_editTxt"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="10"
                android:autofillHints=""
                android:background="@drawable/round_edge"
                android:drawableStart="@drawable/ic_baseline_flight_land_24"
                android:drawablePadding="16dp"
                android:ems="10"
                android:hint="@string/addTrip_tripEnd"
                android:inputType="text"
                android:minHeight="48dp"
                android:padding="16dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tripStart_editTxt" />

            <EditText
                android:id="@+id/tripName_editTxt"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="10"
                android:autofillHints=""
                android:background="@drawable/round_edge"
                android:drawableStart="@drawable/plane_vector"
                android:drawablePadding="16dp"
                android:ems="10"
                android:hint="@string/addTrip_tripName"
                android:inputType="text"
                android:minHeight="48dp"
                android:padding="16dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tripEnd_editTxt" />

            <EditText
                android:id="@+id/tripDate_editTxt"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="10"
                android:autofillHints=""
                android:background="@drawable/round_edge"
                android:drawableStart="@drawable/ic_baseline_date_range_24"
                android:drawablePadding="16dp"
                android:ems="10"
                android:hint="@string/addTrip_tripDate"
                android:inputType="date"
                android:minHeight="48dp"
                android:padding="16dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tripName_editTxt" />

            <EditText
                android:id="@+id/tripTime_editTxt"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="32dp"
                android:layout_weight="10"
                android:autofillHints=""
                android:background="@drawable/round_edge"
                android:drawableStart="@drawable/ic_baseline_access_time_24"
                android:drawablePadding="16dp"
                android:ems="10"
                android:hint="@string/addTrip_tripTime"
                android:inputType="time"
                android:minHeight="48dp"
                android:padding="16dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tripDate_editTxt" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>